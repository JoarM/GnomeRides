<Page x:Class="GnomeRides.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GnomeRides.View"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1440"
      Title="Home"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
      >
    <StackPanel MaxWidth="1024" Margin="24">
        <TextBlock FontSize="32" Foreground="#13170E" FontWeight="Bold">Kategorier</TextBlock>
        <Grid Height="142" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="16" />
                <ColumnDefinition />
                <ColumnDefinition Width="16" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ui:Button VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="0">
                Bilar
            </ui:Button>
            <ui:Button VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="2">
                Motorcycklar
            </ui:Button>
            <ui:Button VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="4">
                Lastbilar
            </ui:Button>
        </Grid>
    </StackPanel>
</Page>
