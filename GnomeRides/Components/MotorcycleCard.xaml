<UserControl x:Class="GnomeRides.Components.MotorcycleCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GnomeRides.Components"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="231" d:DesignWidth="268">
    <Border BorderBrush="#CDD4C4" BorderThickness="1" CornerRadius="12">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>

            <Image Name="ImgCover" HorizontalAlignment="Center" Stretch="Uniform" />
            <TextBlock Name="TxtBlkName" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" />
            <TextBlock Name="TxtBlkPrice" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <ui:Button Grid.Row="2" HorizontalAlignment="Right">Boka nu</ui:Button>
        </Grid>
    </Border>
</UserControl>
