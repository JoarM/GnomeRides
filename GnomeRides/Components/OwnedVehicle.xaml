<UserControl x:Class="GnomeRides.Components.OwnedVehicle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GnomeRides.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#CDD4C4" BorderThickness="1" CornerRadius="12">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>

            <Image Name="ImgCover" HorizontalAlignment="Center" VerticalAlignment="Stretch" Stretch="Uniform" />
            <TextBlock Name="TxtBlkName" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" />
            <TextBlock Name="TxtBlkPrice" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <Button Grid.Row="2" Template="{DynamicResource DestructiveButton}" HorizontalAlignment="Right" Foreground="#F9FAF6" Click="Button_Click">Radera fordon</Button>
        </Grid>
    </Border>
</UserControl>
